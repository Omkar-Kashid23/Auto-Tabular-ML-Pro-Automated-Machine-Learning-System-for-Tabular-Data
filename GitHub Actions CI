name: Python CI - smoke

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['3.10', '3.11']

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Syntax check (pycompile)
      run: |
        python -m py_compile auto_ml.py || true
        python -m py_compile full_pipeline_no_shap.py || true

    - name: Run lightweight smoke (do not run full training)
      run: |
        echo "Smoke test: ensure scripts import"
        python -c "import importlib, sys; importlib.import_module('pandas'); importlib.import_module('sklearn'); print('imports ok')"

    - name: Upload outputs (if any)
      if: always()
      uses: actions/upload-artifact@v4
      with:
        name: ci-logs
        path: |
          ./**.log
